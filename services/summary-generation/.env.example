# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8003
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://your-frontend-domain.com"]

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/radiology_ai
POSTGRES_DB=radiology_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Settings
REDIS_URL=redis://localhost:6379

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Medical Settings
SUPPORTED_LANGUAGES=["de", "en", "fr", "es", "it", "tr"]
COMPLEXITY_LEVELS=["basic", "intermediate", "advanced"]
DEFAULT_LANGUAGE=de
DEFAULT_COMPLEXITY=basic

# Security Settings
SECRET_KEY=your-secret-key-here-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Medical Compliance Settings
INCLUDE_DISCLAIMERS=true
ENABLE_EMERGENCY_DETECTION=true
MAX_SUMMARY_LENGTH=1500

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# External Services
REPORT_GENERATION_URL=http://localhost:8002