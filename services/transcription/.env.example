# Example environment configuration for transcription service

# Server Configuration
HOST=0.0.0.0
PORT=8003
DEBUG=false
WORKERS=4

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=whisper-1
OPENAI_TIMEOUT=60

# Local Whisper Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
USE_LOCAL_WHISPER=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
MAX_AUDIO_SIZE=26214400
AUDIO_CHUNK_DURATION=30.0

# Transcription Configuration
DEFAULT_LANGUAGE=auto
MIN_CONFIDENCE_THRESHOLD=0.6

# Medical Processing Configuration
ENABLE_MEDICAL_PROCESSING=true
MEDICAL_DICT_PATH=data/medical_dictionaries

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30
WS_MAX_MESSAGE_SIZE=1048576

# Session Management
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_IP=5

# File Storage
TEMP_DIR=/tmp/transcription
UPLOAD_DIR=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/transcription.log

# Performance Configuration
MAX_CONCURRENT_TRANSCRIPTIONS=10
TRANSCRIPTION_TIMEOUT=300

# Security Configuration
SECRET_KEY=your_secret_key_here
RATE_LIMIT_PER_MINUTE=60

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# Model Cache Configuration
MODEL_CACHE_DIR=models