# Medical Report Generation Service Environment Configuration
# Copy this file to .env and update the values

# ===== CORE APPLICATION SETTINGS =====
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-in-production-use-256-bit-key

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://postgres:secure_password_2024@localhost:5433/radiology_reports
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://:redis_password_2024@localhost:6380/0
REDIS_CACHE_TTL=3600

# ===== OPENAI API CONFIGURATION =====
# REQUIRED: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# ===== SECURITY SETTINGS =====
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_HOSTS=["*"]

# ===== MEDICAL COMPLIANCE SETTINGS =====
DEFAULT_LANGUAGE=de
REQUIRE_PHYSICIAN_SIGNATURE=true
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555  # 7 years as per medical requirements

# ===== FILE HANDLING =====
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=[".txt", ".json", ".wav", ".mp3"]

# ===== CORS SETTINGS (for development) =====
# In production, specify exact origins instead of "*"
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ===== LOGGING CONFIGURATION =====
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ===== DEVELOPMENT TOOLS (optional) =====
# Set to true to enable development tools like PgAdmin
ENABLE_DEV_TOOLS=false

# ===== NOTIFICATION SETTINGS (future use) =====
# SMTP_SERVER=smtp.gmail.com
